{
  "plugins": ["plugins/markdown"],
  "recurseDepth": 10,
  "source": {
    "include": ["src", "README.md"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs|dist|tests)"
  },
  "sourceType": "module",
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "opts": {
    "template": "node_modules/clean-jsdoc-theme",
    "destination": "./docs/",
    "encoding": "utf8",
    "recurse": true,
    "theme_opts": {
      "default_theme": "light",
      "homepageTitle": "API Documentation â€“ @infotorg/build-url",
      "meta": [
        {
          "name": "author",
          "content": "Lukasz Sitnik"
        },
        {
          "name": "description",
          "content": "Build an URL by joining provided parts and removing trailing slash"
        }
      ]
    }
  },
  "markdown": {
    "idInHeadings": true
  }
}
